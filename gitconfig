[user]
	name = Ryan Souza
	email = rsouza@fastly.com
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	quotepath = false
	mergeoptions = --no-commit

[merge]
	tool = diffmerge
	conflictstyle = diff3

[alias]
	update = fetch --all
	pull-ff = pull --ff-only @{u}
	ff = merge --ff-only @{u}
	ff-rebase = rebase -p @{u}
	bmerge = merge --no-ff
	push-first = push -u
	st = status -sb
	co = checkout
	cp = cherry-pick
	branch-timestamps = for-each-ref --sort='authordate' --format='%(refname:short) : %(authordate)' refs/heads

